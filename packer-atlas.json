{
    "variables": {
        "version": "0.0.1",
        "atlas_artifact": "hugorodgerbrown/trifecta",
        "atlas_token": "{{ env `ATLAS_TOKEN`}}",
        "cleanup_pause": "",
        "headless": "",
        "update": "false",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "install_vagrant_key": "true",
        "custom_script": "."
    },
    "builders": [{
        "vm_name": "ubuntu1404",
        "type": "virtualbox-iso",
        "http_directory": "http",
        "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
        "iso_checksum": "0501c446929f713eb162ae2088d8dc8b6426224a",
        "iso_checksum_type": "sha1",
        "guest_os_type": "Ubuntu_64",
        "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
        "virtualbox_version_file": ".vbox_version",
        "headless": "{{ user `headless` }}",
        "ssh_username": "{{ user `ssh_username` }}",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_wait_timeout": "10000s",
        "boot_command": [
            "<esc><esc><enter><wait>",
            "/install/vmlinuz ",
            "noapic ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg auto ",
            "locale=en_US ",
            "kbd-chooser/method=us ",
            "keyboard-configuration/modelcode=pc105 ",
            "keyboard-configuration/layout=US ",
            "keyboard-configuration/variant=US ",
            "hostname={{ .Name }} ",
            "fb=false ",
            "debconf/frontend=noninteractive ",
            "console-setup/ask_detect=false ",
            "initrd=/install/initrd.gz -- ",
            "<enter>"
        ],
        "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
        "disk_size": 20480,
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "4096"],
            ["modifyvm", "{{.Name}}", "--cpus", "1"]
        ]
    }],
    "provisioners": [{
        "type": "shell",
        "environment_vars": [
            "UPDATE={{user `update`}}",
            "INSTALL_VAGRANT_KEY={{user `install_vagrant_key`}}",
            "SSH_USERNAME={{user `ssh_username`}}",
            "SSH_PASSWORD={{user `ssh_password`}}"
        ],
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "scripts": [
            "scripts/update.sh",
            "scripts/vagrant.sh",
            "scripts/sshd.sh",
            "scripts/minimize.sh"
        ]
    }, {
        "type": "shell",
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }}",
        "script": "scripts/provision.sh"
    }, {
        "type": "shell",
        "environment_vars": [
            "SSH_USERNAME={{user `ssh_username`}}",
            "SSH_PASSWORD={{user `ssh_password`}}"
        ],
        "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
        "script": "scripts/cleanup.sh"
    }],
    "post-processors": [
        [{
            "type": "vagrant",
            "keep_input_artifact": false
        }, {
            "type": "atlas",
            "token": "{{user `atlas_token`}}",
            "artifact": "{{user `atlas_artifact`}}",
            "artifact_type": "virtualbox.box",
            "metadata": {
                "created_at": "{{timestamp}}",
                "provider": "virtualbox",
                "version": "0.2"
            }
        }]
    ],
    "push": {
        "name": "{{ user `atlas_artifact` }}",
        "include": [
            "scripts/*.sh",
            "http/preseed.cfg"
        ]
    }
}
